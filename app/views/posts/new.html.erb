<div class="container m-4">
    <h1>Nouveau Post</h1>
    <%= form_for @post do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title , class: 'form-control'%>
        </div>
        <div class="form-group">
            <%= f.label :standfirst %>
            <%= f.text_area :standfirst,size: "24x6", class: 'form-control' %>
        </div>
        <div class="custom-file">
            <%= f.label :image %>
            <%= f.file_field :image %>
        </div>
        <div class="form-group">
            <%= f.label :article %> 
            <%= f.text_area :article, size: "70x20" , class: 'form-control'%> 
        </div>
        <%= f.submit "Ajouter", class:'btn btn-primary' %>
    <% end %>

</div>